@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center py-5 mb-5">
    <div class="hero-content">
        <h1 class="display-4 fw-bold mb-4 text-dark">Welcome to MerchStore</h1>
        <p class="lead mb-5 text-dark">Your one-stop shop for premium merchandise and exclusive products</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg px-4">
            Shop Now <i class="bi bi-arrow-right"></i>
        </a>
    </div>
</div>

<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="mb-3 text-primary">
                        <i class="bi bi-truck fs-1"></i>
                    </div>
                    <h3 class="card-title h4">Fast Shipping</h3>
                    <p class="card-text">Get your items delivered quickly with our reliable shipping options.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="mb-3 text-primary">
                        <i class="bi bi-shield-check fs-1"></i>
                    </div>
                    <h3 class="card-title h4">Quality Guarantee</h3>
                    <p class="card-text">All our products are carefully selected for premium quality and durability.</p>
                </div>
            </div>
        </div>


        <div class="col-md-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="mb-3 text-primary">
                        <i class="bi bi-arrow-return-left fs-1"></i>
                    </div>
                    <h3 class="card-title h4">Easy Returns</h3>
                    <p class="card-text">Not satisfied? Return within 30 days for a full refund, no questions asked.</p>
                </div>
            </div>
        </div>
    </div>
</div>